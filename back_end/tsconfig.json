{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
   
"include": ["src/**/*", "global.d.ts", "src/server.ts"],
  "exclude": ["node_modules", "dist"]
}